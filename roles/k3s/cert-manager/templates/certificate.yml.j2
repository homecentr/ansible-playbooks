apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ name }}
  namespace: {{ certmanager_target_namespace }}
spec:
  secretName: {{ name }}
  duration: {{ duration }}
  renewBefore: {{ renewBefore }}
  isCA: false
  privateKey:
    algorithm: RSA
    encoding: PKCS1
    size: 2048
  usages:
    - server auth
    - client auth
  dnsNames:
{% for domain in domains%}
    - "{{ domain }}"
{% endfor %}
  issuerRef:
    name: certmanager-cloudflare-issuer
    kind: Issuer