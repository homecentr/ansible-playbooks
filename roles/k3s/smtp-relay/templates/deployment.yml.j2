apiVersion: apps/v1
kind: Deployment
metadata:
  name: smtp-relay
  namespace: "{{ k3s_namespace | mandatory }}"
  labels:
    app.kubernetes.io/name: smtp-relay
    app.kubernetes.io/managed-by: ansible
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: smtp-relay
  template:
    metadata:
      labels:
        app.kubernetes.io/name: smtp-relay
        app.kubernetes.io/managed-by: ansible
      annotations:
        container.apparmor.security.beta.kubernetes.io/mailrelay: runtime/default
        seccomp.security.alpha.kubernetes.io/pod: runtime/default
    spec:
      priorityClassName: critical-priority # Required for iDRAC alerts
      automountServiceAccountToken: false
      containers:
      - name: mailrelay
        image: ghcr.io/homecentr/mailrelay:{{ smtp_relay_mailrelay_image_tag }}
        ports:
        - containerPort: 2525
        volumeMounts:
        - name: smtp-config
          mountPath: "/config/mailrelay.json"
          subPath: config
          readOnly: true
        livenessProbe:
          tcpSocket:
            port: 2525
          initialDelaySeconds: 15
          periodSeconds: 20
        securityContext:
          allowPrivilegeEscalation: false
          privileged: false
          runAsNonRoot: true
          runAsUser: 1000
          runAsGroup: 1000
          readOnlyRootFilesystem: true
          capabilities:
              drop:
              - all
        resources:
          limits:
            cpu: 500m
            memory: 512Mi
          requests:
            memory: 128Mi
      volumes:
        - name: smtp-config
          secret:
            secretName: smtp-relay
            optional: false