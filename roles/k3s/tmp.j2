apiVersion: apps/v1
kind: Deployment
metadata:
  name: sample-nginx
  namespace: "homecentr"
  labels:
    app: sample-nginx
spec:
  replicas: 1
  selector:
    matchLabels:
      app: sample-nginx
  template:
    metadata:
      labels:
        app: sample-nginx
    spec:
      containers:
      - name: sample-nginx
        image: zembutsu/docker-sample-nginx
        ports:
          - containerPort: 80
---
apiVersion: v1
kind: Service
metadata:
  name: sample-nginx
  namespace: "homecentr"
spec:
  ports:
  - port: 80
  selector:
    app: sample-nginx
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: sample-nginx-ingress
  namespace: "homecentr"
  annotations:
    # cert-manager.io/cluster-issuer: certmanager-cloudflare-issuer
    kubernetes.io/ingress.class: "traefik"
    traefik.ingress.kubernetes.io/router.entrypoints: web,websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
spec:
  rules:
  - host: sample.lab.homecentr.io
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: sample-nginx
            port:
              number: 80
  tls:
  - hosts:
    - sample.lab.homecentr.io
      secretName: wildcard-lab-homecentr-io

