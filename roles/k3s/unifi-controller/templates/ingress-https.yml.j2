apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: unifi-controller-https
  namespace: "{{ k3s_namespace | mandatory }}"
  annotations:
    kubernetes.io/ingress.class: "traefik"
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
spec:
  rules:
  - host: {{ unifi_controller_hostname }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: unifi-controller-webui
            port:
              number: 8443
  tls:
    - secretName: {{ unifi_controller_tls_certificate_name }}