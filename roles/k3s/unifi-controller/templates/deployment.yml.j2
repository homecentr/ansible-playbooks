apiVersion: apps/v1
kind: Deployment
metadata:
  name: unifi-controller
  namespace: "{{ unifi_controller_target_namespace | mandatory }}"
  labels:
    app: unifi-controller
spec:
  replicas: 1
  selector:
    matchLabels:
      app: unifi-controller
  template:
    metadata:
      labels:
        app: unifi-controller
    spec:
      containers:
      - name: unifi-controller
        image: lscr.io/linuxserver/unifi-controller
        environment:
          - name: PUID
            value: "1000"
          - name: PGID
            value: "1000"
        ports:
          - containerPort: 8443
          - containerPort: 3478
            protocol: UDP
          - containerPort: 10001
            protocol: UDP
          - containerPort: 8080
            protocol: UDP
          - containerPort: 1900
            protocol: UDP
          - containerPort: 8843
          - containerPort: 8880
          - containerPort: 6789
          - containerPort: 5514
            protocol: UDP
        volumeMounts:
          - mountPath: /config
            name: config
      volumes:
        - name: config
          persistentVolumeClaim:
            claimName: unifi-controller