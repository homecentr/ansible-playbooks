apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: qbittorrent-https
  namespace: "{{ k3s_namespace | mandatory }}"
  annotations:
    kubernetes.io/ingress.class: "traefik"
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
spec:
  rules:
  - host: {{ qbittorrent_hostname }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: qbittorrent
            port:
              number: 8080
  tls:
    - secretName: {{ qbittorrent_tls_certificate_name }}