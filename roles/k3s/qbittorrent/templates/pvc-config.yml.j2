kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: qbittorrent-config
  namespace: "{{ k3s_namespace }}"
  labels:
    app.kubernetes.io/name: qbittorrent
    app.kubernetes.io/managed-by: ansible
spec:
  storageClassName: {{ qbittorrent_config_storage_class }}
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: {{ qbittorrent_config_storage_size }}