apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: snipe-it-https
  namespace: "{{ k3s_namespace }}"
  annotations:
    kubernetes.io/ingress.class: "traefik"
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
spec:
  rules:
  - host: {{ snipe_it_hostname }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: snipe-it
            port:
              number: 80
  tls:
    - secretName: {{ snipe_it_tls_certificate_name }}