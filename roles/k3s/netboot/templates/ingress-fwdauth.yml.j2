apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: qbittorrent-authentik
  namespace: "{{ k3s_namespace | mandatory }}"
  annotations:
    kubernetes.io/ingress.class: "traefik"
    traefik.ingress.kubernetes.io/router.middlewares: "{{ k3s_namespace | mandatory }}-authentik@kubernetescrd"
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
spec:
  rules:
  - host: {{ netboot_hostname }}
    http:
      paths:
      - path: /outpost.goauthentik.io/
        pathType: Prefix
        backend:
          service:
            name: ak-outpost-authentik-embedded-outpost
            port:
              number: 9000
  tls:
    - secretName: {{ netboot_tls_certificate_name }}