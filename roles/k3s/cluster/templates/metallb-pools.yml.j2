apiVersion: v1
kind: ConfigMap
metadata:
  namespace: metallb-system
  name: config
data:
  config: |
    address-pools:
    - name: services-pool
      protocol: layer2
      addresses:
      - "{{ k3s_services_external_ip_range | mandatory }}"
      avoid-buggy-ips: true
    - name: reserved-dns
      protocol: layer2
      addresses:
      - "{{ k3s_services_external_reserved_ip_range | mandatory }}"
      avoid-buggy-ips: true
      auto-assign: false