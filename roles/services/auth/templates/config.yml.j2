# See detailed configuration settings : https://www.pomerium.com/docs/reference/

insecure_server: true

signing_key: "{{ auth_signing_key }}"

address: ":80"
forward_auth_url: http://fwdauth:80
authenticate_service_url: https://{{ auth_domain }}

idp_provider: oidc
idp_scopes: openid email
idp_provider_url: {{ auth_oidc_url }}
idp_client_id: {{ auth_oidc_client_id }}
idp_client_secret: {{ auth_oidc_client_secret }}

cookie_secret: {{ auth_cookie_secret }}

routes:
  - from: https://verify.lab.homecentr.io
    to: http://verify.localhost
    policy:
      - allow:
          or:
            - email:
                is: l.holota@outlook.com
    pass_identity_headers: true

jwt_claims_headers:
  - email
  - groups
  - user
