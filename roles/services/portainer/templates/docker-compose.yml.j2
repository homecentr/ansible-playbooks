version: '3.7'
services:
  agent:
    image: ghcr.io/homecentr/portainer-agent:{{ portainer_agent_docker_image_version }}
    environment:
      PUID: "{{ portainer_user_id }}"
      PGID: "{{ portainer_group_id }}"
      LOG_LEVEL: "debug"
      AGENT_CLUSTER_ADDR: tasks.agent
      AGENT_SECRET: "{{ portainer_agent_secret }}"
      PUID_ADDITIONAL_GROUPS: "{{ docker_gid }}:docker"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes
    networks:
      - agent_network
    deploy:
      mode: global
      
  portainer:
    image: ghcr.io/homecentr/portainer:{{ portainer_docker_image_version }}
    environment:
      PUID: "{{ portainer_user_id }}"
      PGID: "{{ portainer_group_id }}"
      PORTAINER_ARGS: "-H tcp://tasks.agent:9001 --tlsskipverify --admin-password-file /secrets/admin-password.bcrypt"
      AGENT_SECRET: "{{ portainer_agent_secret }}"
      WAIT_FOR_NS_RECORD: "tasks.agent"
      WAIT_FOR_NS_RECORD_TIMEOUT: 60
    healthcheck:
      start_period: "80s"    
    ports:
      - "9000:9000"
    volumes:
      - "{{ portainer_root_dir }}/state:/data:rw"
      - "{{ portainer_root_dir }}/secrets:/secrets:ro"
    networks:
      - agent_network
      - ingress
    deploy:
      mode: replicated
      replicas: 1
      placement:
        constraints: [node.role == manager]
      labels:
       - traefik.enable=true
       - traefik.http.routers.portainer.tls=true
       - traefik.http.routers.portainer.entrypoints=websecure
       - traefik.http.routers.portainer.rule=Host(`{{ portainer_domain }}`)
       - traefik.http.services.portainer.loadbalancer.server.port=9000

networks:
  agent_network:
    driver: overlay
    attachable: true

  ingress:
    name: homecentr-ingress
    external: true