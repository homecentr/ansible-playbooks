apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: homer
  namespace: "{{ k3s_namespace | mandatory }}"
spec:
  podSelector:
    matchLabels:
      app: homer
  policyTypes:
    - Ingress
  ingress:
    - ports:
      - protocol: TCP
        port: 8080
      from:
      - namespaceSelector:
          matchLabels:
            kubernetes.io/metadata.name: kube-system
        podSelector:
          matchLabels:
            app.kubernetes.io/name: traefik