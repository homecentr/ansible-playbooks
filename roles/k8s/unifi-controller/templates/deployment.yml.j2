apiVersion: apps/v1
kind: Deployment
metadata:
  name: unifi-controller
  namespace: "{{ k3s_namespace | mandatory }}"
  labels:
    app.kubernetes.io/name: unifi-controller
    app.kubernetes.io/managed-by: ansible
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: unifi-controller
  template:
    metadata:
      labels:
        app.kubernetes.io/name: unifi-controller
        app.kubernetes.io/managed-by: ansible
    spec:
      containers:
      - name: unifi-controller
        image: lscr.io/linuxserver/unifi-controller:{{ unifi_controller_image_tag }}
        env:
          - name: PUID
            value: "1000"
          - name: PGID
            value: "1000"
        ports:
          - containerPort: 8443
          - containerPort: 3478
            protocol: UDP
          - containerPort: 10001
            protocol: UDP
          - containerPort: 8080
            protocol: UDP
          - containerPort: 1900
            protocol: UDP
          - containerPort: 8843
          - containerPort: 8880
          - containerPort: 6789
          - containerPort: 5514
            protocol: UDP
        volumeMounts:
          - mountPath: /config
            name: config
        livenessProbe:
          httpGet:
            scheme: HTTPS
            path: /
            port: 8443
          initialDelaySeconds: 45
          periodSeconds: 10
      volumes:
        - name: config
          persistentVolumeClaim:
            claimName: unifi-controller