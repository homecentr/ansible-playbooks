apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: monitoring
  namespace: kubescape
spec:
  podSelector: {}
  policyTypes:
    - Ingress
  ingress:
    - from: # Allow traffic from other pods in the namespace
      - namespaceSelector:
          matchLabels:
            namespace: monitoring
      # TODO: Allow only prometheus pods