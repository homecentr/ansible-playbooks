apiVersion: v1
kind: Service
metadata:
  name: mosquitto
  namespace: "{{ k3s_namespace | mandatory }}"
  labels:
    app.kubernetes.io/name: mosquitto
    app.kubernetes.io/managed-by: ansible
spec:
  ports:
  - name: mqtt
    port: 1883
  - name: websockets
    port: 9001
  selector:
    app.kubernetes.io/name: mosquitto