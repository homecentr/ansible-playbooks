apiVersion: v1
kind: Service
metadata:
  name: dhcp
  namespace: "{{ k3s_namespace | mandatory }}"
  annotations:
    metallb.universe.tf/loadBalancerIPs: {{ dhcp_ipv4_address }}
  labels:
    app.kubernetes.io/name: dhcp
    app.kubernetes.io/managed-by: ansible
spec:
  type: LoadBalancer
  ports:
  - name: dhcp
    protocol: UDP
    port: 67
    targetPort: 67
  selector:
    app: dhcp
  externalTrafficPolicy: Local