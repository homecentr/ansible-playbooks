$TTL    604800
@       IN      SOA     ns1.{{ dns_forward_zone_domain | mandatory }}. admin.{{ dns_forward_zone_domain | mandatory }}. (
                  4       ; Serial
             604800     ; Refresh
              86400     ; Retry
            2419200     ; Expire
             604800 )   ; Negative Cache TTL
;
; name servers - NS records
     IN      NS      ns1.{{ dns_forward_zone_domain | mandatory }}.
     IN      NS      ns2.{{ dns_forward_zone_domain | mandatory }}.
;
; name servers - A records
ns1.{{ dns_forward_zone_domain | mandatory }}.          IN      A       {{ dns_master_ipv4 }}
ns2.{{ dns_forward_zone_domain | mandatory }}.          IN      A       {{ dns_slave_ipv4 }}
;
; Cluster individual nodes
{% for host in ansible_play_hosts_all %}{{ host }}.{{ dns_forward_zone_domain | mandatory }}. IN   A    {{ hostvars[host].ansible_host }}
{% endfor %}
;
; Cluster round robin
{% for host in ansible_play_hosts_all %}swarm.{{ dns_forward_zone_domain | mandatory }}. IN   A    {{ hostvars[host].ansible_host }}
{% endfor %}
