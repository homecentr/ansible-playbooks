ACL {{ hostvars[server]['hostname'] }} {{ hostvars[server]['ansible_host'] }}/32
{% endfor %}
ACCEPT localhost
{% for server in groups['all'] %}
ACCEPT {{ hostvars[server]['hostname'] }}
{% endfor %}
REJECT all